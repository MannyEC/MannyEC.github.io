<?xml version="1.0" encoding="utf-8"?>
<quartine name="汉密尔顿焦虑量表">

    <question category="positive" text="抑郁情绪:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 只在问到时才诉述;" value="1 " />
		<answer text=" 在访谈中自发地表达;" value="2 " />
		<answer text=" 不用言语也可以从表情、姿势、声音或欲哭中流露出这种情绪;" value="3 " />
		<answer text=" 病人的自发言语和非语言表情动作几乎完全表现 为这种情绪;" value="4 " />
    </question>
	
	<question category="positive" text="有罪感:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 责备自己，感到自己已连累他人;" value="1 " />
		<answer text=" 认为自己犯了罪，或反复思考以往的过失和错误;" value="2 " />
		<answer text=" 认为目前的疾病，是对自己错误的惩罚，或有罪恶妄想;" value="3 " />
		<answer text=" 罪恶妄想伴有指责或威胁性幻觉" value="4 " />
    </question>
	<question category="positive" text="自杀">
        <answer text=" 没有;" value="0 " />
		<answer text=" 觉得活着没有意义;" value="1 " />
		<answer text=" 希望自己已经死去，或常想到与死有关的事" value="2 " />
		<answer text=" 消极观念自杀念头;" value="3 " />
		<answer text=" 有严重自杀行为。" value="4 " />
    </question>
	<question category="positive" text="入睡困难初段失眠:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 主诉有入睡困难，上床半小时后仍不能入睡。要注意平时病人入睡的时间;" value="1 " />
		<answer text=" 主诉每晚均有入睡困难。" value="2 " />
    </question>
	<question category="positive" text="睡眠不深中段失眠:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 睡眠浅，多恶梦;" value="1 " />
		<answer text=" 半夜晚12点钟以前曾醒来不包括上厕所。" value="2 " />
    </question>
	<question category="positive" text="早醒末段失眠:">
        <answer text=" 没有;" value="0 " />
		<answer text="有早醒，比平时早醒1小时，但能重新入睡应排除平时的习惯; " value="1 " />
		<answer text="早醒后无法重新入睡。 " value="2 " />
		<answer text=" " value="3 " />
		<answer text=" " value="4 " />
    </question>
	
	<question category="positive" text="工作和兴趣-旁人的评价:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 提问时才诉述;" value="1 " />
		<answer text=" 自发地直接或间接表达对活动、工作或学习失去兴趣，如感到没精打彩，犹豫不决，不能坚持或需强迫自己去工作或活动;" value="2 " />
		<answer text=" 活动时间减少或成效下降，住院病人每天参加病房劳动或娱乐不满3小时;" value="3 " />
		<answer text=" 因目前的疾病而停止工作，住院者不参加任何活动或者没有他人帮助便不能完成病室日常事务" value="4 " />
    </question>
	
	<question category="positive" text="阻滞指思维和言语缓慢，注意力难以集中，主动性减退－最好是专业人士观察:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 精神检查中发现轻度阻滞;" value="1 " />
		<answer text=" 精神检查中发现明显阻滞;" value="2 " />
		<answer text="精神检查进行困难; " value="3 " />
		<answer text=" 完全不能回答问题木僵。" value="4 " />
    </question>
	
	<question category="positive" text="激越－最好是专业人士观察:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 检查时有些心神不定;" value="1 " />
		<answer text="明显心神不定或小动作多; " value="2 " />
		<answer text=" 不能静坐，检查中曾起立; " value="3 " />
		<answer text=" 搓手、咬手指、扯头发、咬嘴唇。" value="4 " />
    </question>
	
	<question category="positive" text="精神性焦虑:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 问及时诉述;" value="1 " />
		<answer text=" 自发地表达;" value="2 " />
		<answer text=" 表情和言谈流露出明显忧虑;" value="3 " />
		<answer text=" 明显惊恐。" value="4 " />
    </question>
	
	<question category="positive" text="躯体性焦虑－最好是专业人士观察指焦虑的生理症状，包括:口干、腹胀、腹泻、打呃、 腹绞痛、心悸、头痛、过度换气和叹气，以及尿频和出汗:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 轻度;" value="1 " />
		<answer text=" 中度，有肯定的上述症状;" value="2 " />
		<answer text=" 重度，上述症状严重，影响生活或需要处理;" value="3 " />
		<answer text=" 严重影响生活和活动。" value="4 " />
    </question>
	
	<question category="positive" text="胃肠道症状:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 食欲减退，但不需他人鼓励便自行进食;" value="1 " />
		<answer text=" 进食需他人催促或请求和需要应用泻药或助消化药。" value="2 " />
    </question>
	
	<question category="positive" text="全身症状:四肢，背部或颈部沉重感，背痛、头痛、肌肉疼痛，全身乏力或疲倦。">
        <answer text=" 没有;" value="0 " />
		<answer text=" 轻度;" value="1 " />
		<answer text=" 中度;" value="2 " />
		<answer text=" 重度;" value="3 " />
		<answer text=" 极重度。" value="4 " />
    </question>
	
	<question category="positive" text="性症状指性欲减退，月经紊乱等:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 轻度; " value="1 " />
		<answer text=" 重度;" value="2 " />
		<answer text=" 其他-不能肯定或对被评者不适合" value="3 " />
    </question>
	<question category="positive" text="疑病:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 对身体过分关注;" value="1 " />
		<answer text=" 反复考虑健康问题;" value="2 " />
		<answer text=" 有疑病妄想;" value="3 " />
		<answer text=" 伴幻觉的疑病妄想。" value="4 " />
    </question>
	
	<question category="positive" text="体重减轻:按病史评定:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 患者诉述可能有体重减轻;" value="1 " />
		<answer text=" 肯定体重减轻。按体重记录评定:1一周内体重减轻超过0.5公斤; 2一周内体重减轻超过1公斤。" value="2 " />
    </question>
	
	<question category="positive" text="自知力:">
        <answer text=" 知道自己有病，表现为抑郁;" value="0 " />
		<answer text=" 知道自己有病，但归咎伙食太差-环境问题-工作过忙-病毒感染或需要休息;" value="1 " />
		<answer text=" 完全否认有病" value="2 " />
    </question>
	
	<question category="positive" text="日夜变化如果症状在早晨或傍晚加重，先指出是哪一种，然后按其变化程度评分早上变化评早上，晚上变化评晚上:">
        <answer text=" 早晨傍晚无区别; " value="0 " />
		<answer text=" 早晨轻度加重;" value="1 " />
		<answer text=" 傍晚轻度加重;" value="2 " />
		<answer text=" 早晨严重加重;" value="3 " />
		<answer text=" 傍晚严重加重。" value="4 " />
    </question>
	<question category="positive" text="人格解体或现实解体指非真实感或虚无妄想:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 问及才诉述;" value="1 " />
		<answer text=" 自然诉述;" value="2 " />
		<answer text=" 有虚无妄想;" value="3 " />
		<answer text=" 伴幻觉的虚无妄想。" value="4 " />
    </question>
	<question category="positive" text="偏执症状:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 有猜疑;" value="1 " />
		<answer text=" 有牵连观念;" value="2 " />
		<answer text=" 有关系妄想或被害妄想;" value="3 " />
		<answer text=" 伴幻觉的关系妄想或被害妄想。" value="4 " />
    </question>
	<question category="positive" text="强迫症状指强迫思维和强迫行为:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 问及时才诉述;" value="1 " />
		<answer text=" 自发诉述。" value="2 " />
    </question>
	
	<question category="positive" text="能力减退感－旁人的评价:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 仅于提问时方引出主观体验; " value="1 " />
		<answer text=" 病人主动表示有能力减退感;" value="2 " />
		<answer text=" 需鼓励、指导和安慰才能完成病室日常事务或个人卫生;" value="3 " />
		<answer text=" 穿衣、梳洗、进食、铺床或个人卫生均需他人协助。" value="4 " />
    </question>
	
	<question category="positive" text="绝望感:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 有时怀疑“情况是否会好转”，但解释后能接受;" value="1 " />
		<answer text=" 持续感到“没有希望”，但解释后能接受;" value="2 " />
		<answer text=" 对未来感到灰心、悲观和失望，解释后不能解除;" value="3 " />
		<answer text=" 自动地反复诉述“我的病好不了啦”诸如此类的情况。" value="4 " />
    </question>
	<question category="positive" text="自卑感:">
        <answer text=" 没有;" value="0 " />
		<answer text=" 仅在询问时诉述有自卑感我不如他人;" value="1 " />
		<answer text=" 自动地诉述有自卑感;" value="2 " />
		<answer text=" 病人主动诉述;“我一无是处”或“低人一等”，与评2分者只是程度上的差别;" value="3 " />
		<answer text=" 自卑感达妄想的程度，例如“我是废物”或类似情况。" value="4 " />
    </question>
	
	
   

</quartine>
